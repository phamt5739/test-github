@model IEnumerable<ShopPizzaHut.Models.EF.NhaCungCap>

@{
    ViewBag.Title = "Quản lý nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý nhà cung cấp</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default" style="background:#4e73df; color:white;">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên nhà cung cấp
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhaCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiNhaCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoaiNhaCC)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.MaNhaCC })" class="btn btn-default" style="background:#4e73df; color:white;">Sửa</a>
                <a href="@Url.Action("Details", new { id = item.MaNhaCC})" class="btn btn-default" style="background:#4e73df; color:white;">Chi tiết</a>
                <a href="@Url.Action("Delete", new { id = item.MaNhaCC })" class="btn btn-default" style="background:#4e73df; color:white;">Xóa</a>
            </td>
        </tr>
    }

</table>
