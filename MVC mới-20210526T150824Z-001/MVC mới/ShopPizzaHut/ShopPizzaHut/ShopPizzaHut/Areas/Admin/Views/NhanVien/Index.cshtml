@model IEnumerable<ShopPizzaHut.Models.EF.NhanVien>
@using ShopPizzaHut.Helper
@{
    ViewBag.Title = "Nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý nhân viên</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default" style="background:#4e73df; color:white;">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên chức vụ
        </th>
        <th>
            Tên nhân viên
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Hình ảnh
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChucVuNhanVien.TenChucVu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Image)*@
            @Html.Image(item.Image,"","150")
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.MaNV })" class="btn btn-default" style="background:#4e73df; color:white;">Sửa</a>
            <a href="@Url.Action("Details", new { id = item.MaNV })" class="btn btn-default" style="background:#4e73df; color:white;">Chi tiết</a>
            <a href="@Url.Action("Delete", new { id = item.MaNV })" class="btn btn-default" style="background:#4e73df; color:white;">Xóa</a>
        </td>
    </tr>
}

</table>
