@model IEnumerable<ShopPizzaHut.Models.EF.LoaiSP>

@{
    ViewBag.Title = "Quản lý loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý loại sản phẩm</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default" style="background:#4e73df; color:white;">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoaiSP)
        </td>
        <td>
            <a href="@Url.Action( "Edit", new { id = item.MaLoaiSP })" class="btn btn-default" style="background:#4e73df; color:white;">Sửa</a>
            <a href="@Url.Action( "Delete", new { id = item.MaLoaiSP })" class="btn btn-default" style="background:#4e73df; color:white;">Xóa</a>
        </td>
    </tr>
}

</table>
