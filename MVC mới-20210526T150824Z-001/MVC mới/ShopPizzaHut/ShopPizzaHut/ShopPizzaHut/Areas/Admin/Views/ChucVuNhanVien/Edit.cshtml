@model ShopPizzaHut.Models.EF.ChucVuNhanVien

@{
    ViewBag.Title = "Sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Chức vụ nhân viên</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaChucVu)

        <div class="form-group">
            <p class = "control-label col-md-2">Tên chức vụ</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChucVu, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" style="background:#4e73df; color:white;"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại trang trước", "Index")
</div>
